<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_gray"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/record_return"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_return"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享应用"
            android:layout_marginLeft="2dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/record_return"
            />
    </RelativeLayout>
	
    	<ImageView 
	    android:id="@+id/content"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2.5"
	    android:src="@drawable/ic_launcher"
	    />
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    >
	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/share_weixinpyq"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:onClick="share"
            android:background="@drawable/bg_sharebtn"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_wxcircle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="朋友圈" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:onClick="share"
            android:layout_margin="1dp"
            android:background="@drawable/bg_sharebtn"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="微信" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/bg_sharebtn"
            android:onClick="share"
            android:layout_margin="1dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_qq_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="QQ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_qqzone"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/bg_sharebtn"
            android:onClick="share"
            android:layout_margin="1dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_qzone_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="qq空间" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_margin="1dp"
            android:background="@drawable/bg_sharebtn"
            android:layout_weight="1"
            android:onClick="share"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_sina_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="新浪微博" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_sms"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_sharebtn"
            android:onClick="share"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/umeng_socialize_sms_on" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="短信" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_ewm"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@drawable/bg_sharebtn"
            android:onClick="share"
            android:orientation="vertical" >

            <ImageView
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/erweima" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="二维码" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_fzlj"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_sharebtn"
            android:layout_weight="1"
            android:onClick="share"
            android:layout_margin="1dp"
            android:orientation="vertical" >

            <ImageView
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fuzhilianjie" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_horizontal"
                android:text="复制链接" />
        </LinearLayout>
    </LinearLayout>
	</LinearLayout>
    
    
</LinearLayout>
