<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="SearchTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    
    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/GRAY</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    
    <style name="AcBar_titleStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <!-- LaunchActivity them. -->
    <style name="launchTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:background">@drawable/help1</item>
    </style>

    <style name="pullToRefreshViewSubText" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#a0000000</item>
    </style>

    <style name="pullToRefreshViewText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#a0000000</item>
    </style>

</resources>